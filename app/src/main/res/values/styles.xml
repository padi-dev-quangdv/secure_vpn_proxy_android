<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // Small Text
    <style name="TextViewSmallText">
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    // Color: Primary Main
    <style name="TextViewSmallPrimaryMainColorText" parent="TextViewSmallText">
        <item name="android:textColor">@color/primary_main</item>
    </style>

    // Color: Gray
    <style name="TextViewSmallGrayColorText" parent="TextViewSmallText">
        <item name="android:textColor">@color/neutral_70</item>
    </style>

    // Color: Dark
    <style name="TextViewSmallDarkText" parent="TextViewSmallText">
        <item name="android:textColor">@color/neutral_90</item>
    </style>

    // TextStyle: Bold
    <style name="TextViewSmallBoldText" parent="TextViewSmallText">
        <item name="android:textStyle">bold</item>
    </style>


    // Medium Text
    <style name="TextViewMediumText">
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_90</item>
    </style>

    // Color: #666376
    <style name="TextViewMediumLightGrayText" parent="TextViewMediumText">
        <item name="android:textColor">@color/neutral_80</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_elements</item>
    </style>

    // Color: #767484
    <style name="TextViewMediumGrayText" parent="TextViewMediumText">
        <item name="android:textColor">@color/neutral_70</item>
    </style>

    // TextStyle: Bold
    <style name="TextViewMediumBoldText" parent="TextViewMediumText">
        <item name="android:textStyle">bold</item>
    </style>


    // Large Text
    <style name="TextViewLargeText">
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/neutral_90</item>
    </style>

    // TextStyle: Bold
    <style name="TextViewLargeBoldText" parent="TextViewLargeText">
        <item name="android:textStyle">bold</item>
    </style>
    //  Large Text, Color: Gray
    <style name="TextViewLargeGrayText" parent="TextViewLargeText">
        <item name="android:textColor">@color/neutral_70</item>
    </style>

    //  Large Text, Color: White, TextStyle: Bold
    <style name="TextViewLargeWhiteBoldText" parent="TextViewLargeBoldText">
        <item name="android:textColor">@color/white</item>
    </style>

    //  Large Text, Color: Gray , Margin Top and Start
    <style name="TextViewLargeGrayTextMargin" parent="TextViewLargeGrayText">
        <item name="android:layout_marginTop">@dimen/regular_margin</item>
        <item name="android:layout_marginStart">@dimen/regular_margin</item>
    </style>

    // TextView Title
    <style name="TextViewTitle">
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightTextViewTitle" parent="TextViewTitle">
        <item name="color">@color/neutral_90</item>
    </style>

    <style name="DarkTextViewTitle" parent="TextViewTitle">
        <item name="color">@color/neutral_100</item>
    </style>


    <style name="TextViewSuperLargeBoldText">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Button Gradient

    <style name="ButtonGradient">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:background">@drawable/bg_button_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGradientSmall" parent="ButtonGradient">
        <item name="android:background">@drawable/bg_button_small</item>
    </style>

    <style name="ButtonGradientLarge" parent="ButtonGradient">
        <item name="android:background">@drawable/bg_button_large</item>
    </style>

    <style name="ButtonGradientMedium" parent="ButtonGradient">
        <item name="android:background">@drawable/bg_button_medium</item>
    </style>

    // Button Options
    <style name="ButtonOptions">
        <item name="android:layout_marginTop">@dimen/margin_between_elements</item>
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:background">@drawable/layout_options</item>
        <item name="android:textAllCaps">false</item>
    </style>

    // Image Icon for Features
    <style name="ImageIconFeature">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="tint">@color/primary_main</item>
    </style>

    // EditText
    <style name="CustomEditText" >
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="fontFamily">@font/plus_jakarta_text_regular</item>
        <item name="android:paddingStart">@dimen/regular_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_70</item>
    </style>

    <style name="PasswordEditText" parent="CustomEditText">
        <item name="android:paddingEnd">@dimen/regular_margin</item>
        <item name="android:hint">@string/password_hint</item>
    </style>


    //Image icon
    <style name="MarginIcon">
        <item name="android:layout_marginTop">@dimen/icon_margin_top</item>
        <item name="android:layout_marginStart">@dimen/regular_margin</item>
        <item name="android:layout_marginEnd">@dimen/regular_margin</item>
    </style>

    // Switch Button
    <style name="CustomSwitchButton">
        <item name="android:trackTint" tools:targetApi="m">@color/primary_main</item>
        <item name="android:thumbTint">@color/white</item>
    </style>


</resources>
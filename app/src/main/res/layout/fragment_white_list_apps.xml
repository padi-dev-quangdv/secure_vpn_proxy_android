<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.WhiteListAppsFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MarginImageIcon"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whitelist_apps"
            android:textAppearance="@style/TextViewLargeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageBack" />

        <TextView
            android:id="@+id/tvDescriptionWhitelistApps"
            app:layout_constraintTop_toBottomOf="@id/imageBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/description_whitelist_apps"
            android:layout_marginTop="@dimen/regular_margin"
            android:textAppearance="@style/TextViewMediumBoldText"
            android:layout_width="327dp"
            android:layout_height="wrap_content" />

        <SearchView
            android:id="@+id/searchView"
            android:queryHint="Search apps"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionWhitelistApps"
            android:layout_marginTop="@dimen/regular_margin"
            app:layout_constraintStart_toStartOf="@id/tvDescriptionWhitelistApps"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" />

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/regular_margin"
            android:background="@drawable/layout_feature_for_premium"
            android:layout_width="327dp"
            android:layout_height="492dp">

            <ImageView
                android:id="@+id/imageFacebook"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginStart="@dimen/small_margin"
                android:src="@drawable/ic_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#3B5998" />

            <TextView
                android:textAppearance="@style/TextViewMediumGrayText"
                android:id="@+id/tvFacebook"
                app:layout_constraintStart_toEndOf="@id/imageFacebook"
                app:layout_constraintTop_toTopOf="@id/imageFacebook"
                app:layout_constraintBottom_toBottomOf="@id/imageFacebook"
                android:layout_marginStart="@dimen/margin_between_elements"
                android:text="@string/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:trackTint="@color/primary_main"
                android:thumbTint="@color/white"
                app:layout_constraintTop_toTopOf="@id/imageFacebook"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute,UseSwitchCompatOrMaterialXml" />

            <ImageView
                android:id="@+id/imageTwitter"
                app:layout_constraintTop_toBottomOf="@id/imageFacebook"
                app:layout_constraintStart_toStartOf="@id/imageFacebook"
                android:layout_marginTop="@dimen/small_margin"
                android:src="@drawable/ic_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#3B5998" />

            <TextView
                android:textAppearance="@style/TextViewMediumGrayText"
                android:id="@+id/tvTwitter"
                app:layout_constraintStart_toEndOf="@id/imageTwitter"
                app:layout_constraintTop_toTopOf="@id/imageTwitter"
                app:layout_constraintBottom_toBottomOf="@id/imageTwitter"
                android:layout_marginStart="@dimen/margin_between_elements"
                android:text="@string/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:trackTint="@color/primary_main"
                android:thumbTint="@color/white"
                app:layout_constraintTop_toTopOf="@id/imageTwitter"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute,UseSwitchCompatOrMaterialXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>